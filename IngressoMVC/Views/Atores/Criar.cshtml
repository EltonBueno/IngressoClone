@model IngressoMVC.Models.ViewModels.Request.PostAtorDTO


@{
    ViewData["Title"] = "Adicionar novo ator";
}


<div class="container">
    <div class="row text">
        <div class="col-md-8 offset-md-2">
            <p><h1>Criar novo Ator</h1></p>
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <form asp-action="Criar">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                    
                        </div>
                        <div class="form-group">
                    
                            <label asp-for="Bio" class="control-label">Biografia</label>
                            <input asp-for="Bio" class="form-control" />
                        
                        </div>
                        <div class="form-group">
                        
                            <label asp-for="FotoPerfilURL" class="control-label">Foto</label>
                            <input asp-for="FotoPerfilURL" class="form-control" />
                        
                        <div class="form-group mt-3">
                        
                            <input type="submit" value="Criar" class="btn btn-outline-success text center float-right" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>