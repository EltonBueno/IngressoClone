@model Ator


@{
    ViewData["Title"] = "Deletar ator";
}


<div class="container">
    <div class="row text">
        <div class="col-md-8 offset-md-2">
            <p>
            <h1>Deletar Ator @Model.Nome </h1>
            </p>
            <div class="row">
                <div class="col-md-8 offset-md-2">
                   
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                    
                        </div>
                        <div class="form-group">
                    
                            <label asp-for="Bio" class="control-label">Biografia</label>
                            <input asp-for="Bio" class="form-control" />
                        
                        </div>
                        <div class="form-group">
                        
                            <label asp-for="FotoPerfilURL" class="control-label">Foto</label>
                            <input asp-for="FotoPerfilURL" class="form-control" />
                        </div>
                        <div class="form-group mt-3">
                        
                            <div>
                                <form asp-action="Deletar">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="submit" value="Confirmar" class="btn btn-outline-danger text center float-right" />
                                </form>
                            <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>