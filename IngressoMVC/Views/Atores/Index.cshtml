@model IEnumerable<Ator>
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h1>Atores
                -
                <a class="btn btn-dark" href="">
                    Cadastrar
                </a>
                    </h1>
                <div class="row my-2">

                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Pesquisar" name="nome" id="nome" aria-label="nome">
                        <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                    </div>
                </div>

                <hr />
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ações</th>
                            <th>Foto de Perfil</th>
                            <th>Nome</th>
                            <th>Biografia</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ator in Model)
                        {

                            <tr>
                                
                                <td>
                                    <div class="d-flex flex-column">
                                        <a class="btn btn-success" href="">
                                            <i class="fa-solid fa-user-pen"></i>
                                            Editar
                                        </a>
                                        
                                        <a class="btn btn-primary mt-1" href="">
                                            <i class="fa-solid fa-eye"></i>
                                            Ver
                                        </a>
                                        
                                        <a class="btn btn-danger mt-1" href="">
                                            <i class="fa-solid fa-trash-can"></i>
                                            Excluir
                                        </a>
                                    </div>
                                </td>
                                
                                <td class="align-middle">
                                    <img src="@ator.FotoPerfilURL" style="max-width:100px" alt="@ator.Nome" />
                                </td>
                                <td class="align-middle">@ator.Nome</td>
                                <td class="align-middle">@ator.Bio</td>
                                </tr>
                            }
                                        </tbody>
                                        </table>

                                    </div>
                        </div>
                    </div>