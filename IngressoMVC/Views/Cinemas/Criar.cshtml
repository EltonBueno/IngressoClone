@model IngressoMVC.Models.ViewModels.Request.PostCinemaDTO

@{
    ViewData["Title"] = "Adicionando Cinemas";
}

<div class="container">
    <div class="row text ">
        <div class="col-md-8 offset-md-2">
        <h1>Criar novo Cinema</h1>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                  <form asp-action="Criar">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                    
                        </div>
                        <div class="form-group">
                    
                            <label asp-for="Descricao" class="control-label">Descrição</label>
                            <input asp-for="Descricao" class="form-control" />
                        
                        </div>
                        <div class="form-group">
                        
                            <label asp-for="LogoURL" class="control-label">Foto</label>
                            <input asp-for="LogoURL" class="form-control" />
                        
                        <div class="form-group mt-3">
                        
                            <input type="submit" value="Criar" class="btn btn-outline-success text center float-right" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                        </form>
            </div>
        </div>
        </div>
    </div>
</div>
