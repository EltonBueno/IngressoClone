@model IngressoMVC.Models.ViewModels.Request.PostCategoriaDTO

@{
    ViewData["Title"] = "Adicionando Categorias";
}


<div class="container">
    <div class="row text">
        <div class="col-md-8 offset-md-2">
        <h1>Criar novo Categoria</h1>
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <form asp-action="Criar">
                        <div asp-validation-summary="All" class="text-danger"></div>
                       <div class="form-group">
                         <label asp-for="Nome"></label>
                         <input  asp-for="Nome"  class="form-control">
                       </div>
                       <div class="form-group mt-3">
                         <input  type="submit" value="Criar" class="btn btn-outline-success text center float-right">
                         <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                       </div>
                       
                    </form>
                </div>
            </div>    
        </div>

    </div>
</div>

